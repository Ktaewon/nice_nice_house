<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout

            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img"

            android:layout_weight="1.8"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="50dp"
            android:layout_marginBottom="20dp" android:orientation="vertical" android:clipToPadding="false">
        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="착하디 착한 집"

                android:textColor="@color/main"
                android:fontFamily="@font/font"
                android:textAllCaps="true"
                android:textSize="40dp"
                android:layout_marginBottom="10dp"/>
        <Button
                android:id="@+id/btnMapOpen"
                android:backgroundTint="#FFFFFF"
                android:textColor="@color/main"
                android:layout_below="@id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도 열기"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1"
    android:padding="30dp">
        <LinearLayout
                android:id="@+id/menu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/e_food"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:padding="3pt"
                        android:src="@drawable/pizza"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="양식"
                        android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/c_food"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:padding="2pt"
                        android:src="@drawable/chinese"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="중식"
                        android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/j_food"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/japan"
                android:padding="3pt"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일식"
                        android:textAlignment="center"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:id="@+id/menu2"
                android:layout_marginVertical="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/kn_food"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/korea"
                android:padding="2pt"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="한식면,찌개류"
                        android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/k_food"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:padding="4pt"
                        android:src="@drawable/bibimbab"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="한식전체 "
                        android:textStyle="bold"

                        android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/ks_food"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:padding="2pt"
                        android:src="@drawable/fish"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="한식해산물"
                        android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/menu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/km_food"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/kmeal"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="한식_육류"
                        android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:id="@+id/kb_food"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:src="@drawable/koreab"
                        android:padding="2pt"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="한식분식"
                        android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:padding="2pt"
                        android:src="@drawable/all"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>